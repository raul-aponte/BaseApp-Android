<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.basecompany.baseappandroid">

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.SplashActivity" />
        <activity android:name=".views.activities.LoginActivity" />
        <activity android:name=".views.activities.DashboardActivity" />
        <activity android:name=".views.activities.UserProfileActivity" />
    </application>

</manifest>
